{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext", // which level of JS support to target
    "module": "ESNext", // which system for the program AMD, UMD, System, CommonJS

    // Recommended: Compiler complains about expressions implicitly typed as 'any'
    "noImplicitAny": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "üß™/*": ["./tests/*"],
      "üìù/*": ["./reporter/*"],
      "@/*": ["./types/*"]
    },
    "types": ["bun-types", "./types/**.d.ts"]
  },
  "include": [".eslintrc.cjs", "**/*.ts", "**/*.cjs", "**/*.mjs"], // which files to compile
  "exclude": ["node_modules"] // which files to skip
}
